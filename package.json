{
  "name": "postcss-svg-fragments",
  "version": "2.2.0",
  "description": "Use SVG fragments in CSS",
  "author": "Jonathan Neal <jonathantneal@hotmail.com>",
  "license": "CC0-1.0",
  "repository": "jonathantneal/postcss-svg-fragments",
  "homepage": "https://github.com/jonathantneal/postcss-svg-fragments#readme",
  "bugs": "https://github.com/jonathantneal/postcss-svg-fragments/issues",
  "main": "index.js",
  "files": [
    "index.js",
    "lib"
  ],
  "scripts": {
    "lint": "npm run lint:ec && npm run lint:js",
    "lint:ec": "echint",
    "lint:js": "eslint *.js lib/*.js --cache --ignore-pattern .gitignore",
    "prepublish": "npm test",
    "tape": "postcss-tape",
    "test": "npm run lint && postcss-tape"
  },
  "engines": {
    "node": ">=6.5.0"
  },
  "dependencies": {
    "postcss": "^5.2.9",
    "postcss-value-parser": "^3.3.0",
    "resolve": "^1.2.0",
    "xmldoc": "^1.0.0"
  },
  "devDependencies": {
    "echint": "^2.1.1",
    "echint-config-dev": "1.0.0",
    "eslint": "^3.13.1",
    "eslint-config-dev": "1.0.0",
    "postcss-tape": "1.3.0",
    "test-package": "file:./test/test-package"
  },
  "echint": {
    "extends": "dev"
  },
  "eslintConfig": {
    "extends": "dev",
    "parserOptions": {
      "sourceType": "module"
    }
  },
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "svgs",
    "scalable",
    "vectors",
    "images",
    "graphics",
    "fragments",
    "identifiers",
    "ids",
    "hashes",
    "urls",
    "utf8",
    "base64"
  ]
}
